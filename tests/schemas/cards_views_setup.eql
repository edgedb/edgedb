CREATE VIEW test::AirCard := (
    WITH MODULE test
    SELECT Card {
        owners := (
            SELECT Card.<deck[IS User]
        )
    } FILTER Card.element = 'Air'
);


CREATE VIEW test::WaterCard := (
    WITH MODULE test
    SELECT Card {
        owners := (
            SELECT Card.<deck[IS User]
        )
    } FILTER Card.element = 'Water'
);


