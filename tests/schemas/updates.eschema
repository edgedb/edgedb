type Status:
    required property name -> str:
        constraint unique

type Tag:
    required property name -> str:
        constraint unique

abstract link annotated_status:
    property note -> str

abstract link weighted_tags:
    property weight -> int64

abstract link annotated_tests:
    property note -> str

type UpdateTest:
    required property name -> str
    property comment -> str

    # for testing singleton links
    link status -> Status
    link annotated_status -> Status

    # for testing links to sets
    link tags -> Tag:
        cardinality := '**'
    link weighted_tags -> Tag:
        cardinality := '**'

    # for testing links to sets of the same type as originator
    link related -> UpdateTest:
        cardinality := '**'
    link annotated_tests -> UpdateTest:
        cardinality := '**'
