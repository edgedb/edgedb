abstract type Named:
    required link name to str:
        delegated constraint unique

type Item extending Named:
    link tag_set1 to str:
        mapping := '1*'

    # for scalar links there should not be any practical difference
    # between a 1* and ** mapping
    #
    link tag_set2 to str:
        mapping := '**'

    link tag_array to array<str>

    link components to map<str, int>
